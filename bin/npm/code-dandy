#!/bin/bash

CURRENT_PATH=$(dirname "$0")
PACKAGE_PATH=$(realpath "${CURRENT_PATH}/../..")
BIN_PATH=${PACKAGE_PATH}/bin/npm
ROOT_DIR=$(realpath "${PACKAGE_PATH}/../../..")

case "${1}" in
	init)
        echo -e "Copying Git Hooks to the .githooks directory ..."
        cp -r ../.githooks "${$ROOT_PATH}/"
        echo -e "... Done."

        echo -e "Copying .lintstagedrc.json ..."
        cp ../.lintstagedrc.json "${$ROOT_PATH}/"
        echo -e "... Done."

        echo -e "Setting up Git Hooks to read from the .githooks directory ..."
        git config core.hooksPath "${$ROOT_PATH}/.githooks"
        echo -e "... Done."

        echo -e "Setting up NPM scripts..."
        npm pkg set scripts['format']="node_modules/.bin/prettier --config node_modules/@lform/code-dandy/.prettierrc.json --ignore-path node_modules/@lform/code-dandy/.prettierignore --write '**/*.{css,scss,pcss,js,jsx,ts,tsx,html,htm,twig,blade.php}'"
        npm pkg set scripts['lint:css']="node_modules/.bin/stylelint --config node_modules/@lform/code-dandy/stylelint.json --ignore-path node_modules/@lform/code-dandy/stylelintignore --fix '**/*.{css,scss,pcss}'"
        npm pkg set scripts['lint:js']="node_modules/.bin/eslint -c node_modules/@lform/code-dandy/.eslintrc.json --fix '**/*.{js,jsx,ts,tsx}'"
        npm pkg set scripts['lint:html']="node_modules/.bin/linthtml --config node_modules/@lform/code-dandy/.linthtmlrc.json '**/*.{html,htm}'"
        echo -e "... Done."

        echo "Setup complete."
        ;;
	*)
		echo -e "Usage: code-dandy init"
    	;;
esac
