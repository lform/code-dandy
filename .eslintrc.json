{
	"env": {
		"browser": true,
		"es2021": true
	},
	"plugins": ["@stylistic/eslint-plugin-js", "prettier"],
	"extends": ["standard", "plugin:prettier/recommended"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"ignorePatterns": [
		"**/*.d.ts",
		"build/*",
		"node_modules/*",
		"dist/*",
		"*-lock.json",
		".*.json",
		"composer.json",
		"package.json",
		"yarn.json"
	],
	"rules": {
		"@stylistic/js/eol-last": ["error", "always"],
		"@stylistic/js/max-len": [
			"error",
			{
				"code": 120,
				"comments": 120,
				"ignoreUrls": true,
				"ignoreTrailingComments": true,
				"ignoreStrings": true,
				"ignoreTemplateLiterals": true,
				"ignoreRegExpLiterals": true
			}
		],
		"array-callback-return": [
			"error",
			{
				"allowImplicit": false,
				"checkForEach": true
			}
		],
		"arrow-body-style": [
			"warn",
			"as-needed"
		],
		"arrow-parens": ["error", "as-needed"],
		"no-console": "off",
		"no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"args": "after-used",
				"caughtErrors": "all"
			}
		],
		"camelcase": [
			"error",
			{
				"properties": "always",
				"ignoreDestructuring": false,
				"ignoreImports": false,
				"ignoreGlobals": false
			}
		],
		"complexity": [
			"warn",
			6
		],
		"curly": "error",
		"default-case-last": "error",
		"default-param-last": ["error"],
		"eqeqeq": "error",
		"id-length": [
			"error",
			{
				"min": 2,
				"properties": "never",
				"exceptions": ["e"]
			}
		],
		"max-depth": [
			"error",
			6
		],
		"max-lines": "off",
		"max-lines-per-function": "off",
		"max-nested-callbacks": [
			"error",
			3
		],
		"max-params": [
			"error",
			5
		],
		"multiline-comment-style": [
			"warn",
			"starred-block"
		],
		"no-confusing-arrow": "error",
		"no-console": "warn",
		"no-continue": "off",
		"no-duplicate-imports": "warn",
		"no-else-return": "error",
		"no-empty-function": "error",
		"no-eval": "error",
		"no-undefined": "off",
		"no-nested-ternary": "error",
		"object-shorthand": ["error", "always"],
		"prefer-arrow-callback": "error",
		"prettier/prettier": "error",
		"prefer-destructuring": [
			"error",
			{
				"VariableDeclarator": {
					"array": true,
					"object": true
				},
				"AssignmentExpression": {
					"array": true,
					"object": true
				}
			},
			{
				"enforceForRenamedProperties": false
			}
		],
		"semi-style": ["error", "last"],
		"spaced-comment": [
			"error",
			"always",
			{
				"exceptions": ["-"]
			}
		]
	}
}
