{
	"semi": true,
	"singleQuote": false,
	"tabWidth": 4,
	"useTabs": true,
	"printWidth": 120,
	"trailingComma": "es5",
	"arrowParens": "avoid",
	"htmlWhitespaceSensitivity": "css",
	"bracketSameLine": true,
	"proseWrap": "preserve",
	"jsxSingleQuote": false,
	"overrides": [
		{
			"files": [
				"*.blade.php"
			],
			"options": {
				"parser": "blade"
			}
		},
		{
			"files": [
				"*.twig"
			],
			"options": {
				"parser": "melody",
				"twigMultiTags": [
					"nav,endnav",
					"switch,case,default,endswitch",
					"ifchildren,endifchildren",
					"cache,endcache",
					"unless,endunless",
					"js,endjs"
				]
			}
		}
	],
	"plugins": [
		"@zackad/prettier-plugin-twig-melody",
		"prettier-plugin-blade",
		"prettier-plugin-tailwindcss"
	]
}
